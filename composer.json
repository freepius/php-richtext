{
    "name": "freepius/php-richtext",
    "description": "A simple wrapper (and more) allowing to use Markdown-Extra and SmartyPants-Typographer",
    "keywords": ["markdown", "pimple", "twig", "silex"],
    "homepage": "http://github.com/freepius44/php-richtext",
    "license": "CC0",
    "authors": [
        {
            "name": "Mathieu Poisbeau",
            "email": "freepius44@gmail.com"
        }
    ],
    "require": {
        "michelf/php-markdown": "*",
        "michelf/php-smartypants": "*"
    },
    "require-dev": {
        "pimple/pimple": "~3.0",
        "twig/twig": "~1.8",
        "phpunit/phpunit": "~4.0"
    },
    "suggest": {
        "silex/silex": "~2.0"
    },
    "autoload": {
        "psr-0": { "Freepius": "src/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
